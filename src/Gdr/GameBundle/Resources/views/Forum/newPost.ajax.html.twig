{% if canWriteSoul %}
    <div id="forum-container">
        <h1><span>Rispondi alla discussione</span></h1>

        <form id="reply-form" method="POST" action="{{ path('bacheca-create-post', {thread: thread.id}) }}">
            {{ form_errors(form) }}

            {{ form_rest(form) }}

            <button type="submit" style="margin-bottom: 30px" class="button big">Scrivi la tua risposta</button>
        </form>
    </div>
{% else %}
    <p>Le anime non possono scrivere qui.</p>
{% endif %}
<hr>